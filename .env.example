# Required for live DART RSS
DART_RSS_URL=https://dart.fss.or.kr/api/todayRSS.xml

# CSV with columns: company_name,ticker,market
DART_COMPANY_MAP_PATH=./data/kospi_companies_sample.csv

# SQLite database
DART_DB_PATH=./data/dart_digest.db

# Asia/Seoul recommended
DART_TIMEZONE=Asia/Seoul

# Daily selection rules
DART_TOP_N_MAX=2
DART_SECOND_PICK_MIN_SCORE=78
DART_SECOND_PICK_MIN_GAP=6

# Slack incoming webhook
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=

# Optional: use OpenAI for richer article generation
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini

# Set true to generate only (no Slack send)
DRY_RUN=false
